<div class="modal-content entry-edit">
  <div class="modal-header">
    <h4 class="modal-title">New Form</h4>
  </div>
  <div class="modal-body">
    <div class="form-inline" role="form">
      <p>Enter form name and select features.</p>
      <div class="form-group">
        {{input placeholder="Name" value=name class="form-control required" }}
      </div>
      <div class="form-group">
        {{multi-select-component
          content=newFeatures
          class="new-form-feature-select"
          optionLabelPath="name"
          prompt="Select Features"
          selections=features
        }}
      </div>
    <button type="button" class="btn btn-default" {{action 'save'}}>Save</button>
    {{#if loading}}
    <img src="/images/loading.gif" />
    {{/if}}
    </div>
  </div>
</div>
