<div class="modal-content entry-edit">
  <div class="modal-header">
    <h4 class="modal-title">New Language</h4>
  </div>
  <div class="modal-body">
    <div class="form-inline" role="form">
      <div class="form-group">
        {{input placeholder="Name" value=name class="form-control required" }}
      </div>
      <div class="form-group">
        {{input placeholder="Language Code" value=langCode class="form-control required" maxlength="4" size="12" }}
      </div>
      <div class="form-group">
        {{input placeholder="Region Code" value=regionCode class="form-control" maxlength="3" size="10" }}
      </div>
    <button type="button" class="btn btn-default" {{action 'save'}}>Save</button>
    {{#if loading}}
    <img src="/images/loading.gif" />
    {{/if}}
    </div>
  </div>
</div>
