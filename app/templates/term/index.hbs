<div class="container">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-bordered">
          <tr>
            <th>Search</th>
            <th>Languages</th>
            {{#if subjectFields}}
            <th>Subject Fields</th>
            {{/if}}
          </tr>
          <tr>
            <td>
              {{input
                class="form-control"
                placeholder="Search for a term."
                value=_query_term
                action="setQueryTerm"
              }}
            </td>
            <td>
              {{multi-select-component
                content=languages
                optionLabelPath="name"
                classNames="lang-multi-select"
                selections=activeLanguages
              }}
              <br />
              <span>Click field to select languages.</span>
            </td>
            {{#if subjectFields}}
            <td>
               {{multi-select-component
                content=subjectFields
                optionLabelPath="name"
                classNames="lang-multi-select"
                selections=activeSubjectFields
               }}
              <br />
              <span>Click field to select subject fields.</span>
            </td>
            {{/if}}
        </table>
      </div>
    </div>
</div>
<div class="container">
    <div class="row">
      {{table-component
        hasFooter=false
        columns=columns
        content=rows
      }}
    </div>
    <div class="row">
      {{pager-component
        allPages=pages
        setLimit="adjustLimit"
        setStart="adjustStart"
      }}
    </div>
</div>
